<table class="table text-center">
    <thead>
    <tr>
        <th class="active text-center" style="background-color: #00008B;">City</th>
        <th class="active text-center" style="background-color: #0000CD;" >Position</th>
        <th class="active text-center" style="background-color: #0000FF;">Company</th>
    </tr>
    </thead>

    <tbody>
    {% for job in jobs %}
        <tr>
            <td>{{ job.location }}</td>
            <td>
                <a href="{{ path('job.show', {id: job.id}) }}">
                    {{ job.position }}
                </a>
            </td>
            <td>{{ job.company }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
